function main() -> int {
    a -> int;
    result -> int;
    printf("value: ");
    scanf("%d", a);
    result = sum(a);
    printf("%d\n", result);
}

function sum(n -> int) -> int {
    if (n == 1) {
        return n;
    }
    else {
        temp -> int;
        temp = n - 1;
        return n + sum(temp);
    }
}
